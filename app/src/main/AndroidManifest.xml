<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.apps.headtrap.overwatchheroguide">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <meta-data
            android:name="DATABASE"
            android:value="igotcha-local.db"/>
        <meta-data
            android:name="VERSION"
            android:value="1"/>
        <meta-data
            android:name="QUERY_LOG"
            android:value="true"/>
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.apps.headtrap.overwatchheroguide.domain"/>

        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.HeroDetailsActivity">
        </activity>
        <activity android:name=".activity.MapDetailsActivity">
        </activity>
    </application>

</manifest>